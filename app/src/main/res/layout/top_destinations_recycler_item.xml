<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="travelModel"
            type="com.example.graduationproject.model.general.GeneralModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/all_cardView_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_153sdp">

            <ImageView
                android:id="@+id/tab_layout_all_img_2"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_153sdp"
                android:src="@drawable/home_img"
                android:scaleType="fitXY"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{travelModel.country}"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textColor="@color/home_button_text_color"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_58sdp"
                app:layout_constraintStart_toStartOf="@id/tab_layout_all_img_2"
                app:layout_constraintEnd_toEndOf="@id/tab_layout_all_img_2"
                app:layout_constraintTop_toTopOf="@id/tab_layout_all_img_2"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{travelModel.city}"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/home_button_text_color"
                android:fontFamily="@font/source_sans_pro"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_79sdp"
                app:layout_constraintStart_toStartOf="@id/tab_layout_all_img_2"
                app:layout_constraintEnd_toEndOf="@id/tab_layout_all_img_2"
                app:layout_constraintTop_toTopOf="@id/tab_layout_all_img_2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</layout>